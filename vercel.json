{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "style.css", "use": "@vercel/static" },
    { "src": "backend/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" }, 
    { "src": "/api/(.*)", "dest": "/backend/$1.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
